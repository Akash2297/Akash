#include<iostream>
#include<iterator>
#include<algorithm>
#include<math.h>
#include<vector>
#include<stack>
#include<string.h>
#include<map>
#include<bitset>
#include<set>
#include<deque>
#include<queue>
#include<list>
#define ln 1000005
#define pi acos(-1.0)
#define pb push_back
#define mp nake_pair
using namespace std;
int arr[ln];
int partition(int low,int high){
    
    int pivot=arr[low];
    while(low!=high){
        
        if(pivot==arr[low]){
            
            if(arr[high]>pivot){
                high-=1;
            }
            else if(arr[high]<=pivot){
                swap(arr[low],arr[high]);
                pivot=arr[high];
                low+=1;
            }
        }
        else if(pivot==arr[high]){
            
            if(arr[low]<pivot){
                low+=1;
            }
            else if(arr[low]>=pivot){
                swap(arr[low],arr[high]);
                pivot=arr[low];
                high-=1;
            }
        }
    }
    return low;
}
void QuickSort(int low,int high){
    
    if(low<high){
        int pivot = partition(low,high);
        QuickSort(low,pivot-1);
        QuickSort(pivot+1,high);
    }
}
int main()
{
    printf("Enter the size on an array : ");
    int len;
    cin>>len;
    
    printf("Enter the array element : ");
    for(int i=0;i<len;i++){
        cin>>arr[i];
    }
    int low=0,high=len-1;
    QuickSort(low,high);
    
    printf("Sorted array : ");
    for(int i=0;i<len;i++){
        cout<<arr[i]<<" ";
    }
    cout<<endl;
    return 0;
}
