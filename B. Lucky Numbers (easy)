#define ln 15
#define pi acos(-1.0)
#define pb push_back
#define mp nake_pair
using namespace std;
long long int number=0,count1=0,count2=0;
vector<long long int>aspt1;
vector<long long int>aspt2;
void picacu(char a[], long long int n){
    
    long long int togepi=atoi(a);
    if(togepi>=number){
        count1++;
        aspt1.push_back(togepi);
    }
    else{
        count2++;
        aspt2.push_back(togepi);
    }
}
void akash(char a[], long long int n){
    sort(a,a+n);
    do {
        picacu(a,n);
    } while (next_permutation(a,a+n));
}
int main()
{
    char str[ln];
    scanf("%s",str);
    
    long long int len=strlen(str);
    number=atoi(str);
    
    if(number<=99999999){
        char swarna[len];
        if(len%2==0){
            for(long long int i=0;i<len/2;i++){
                swarna[i]='4';
            }
            for(long long int i=(len/2);i<len;i++){
                swarna[i]='7';
            }
        }
        else{
            for(long long int i=0;i<=len/2;i++){
                swarna[i]='4';
            }
            for(long long int i=(len/2)+1;i<len;i++){
                swarna[i]='7';
            }
            swarna[len]='7';
            len++;
        }
        akash(swarna,len);
        
        if(count1>0){
            sort(aspt1.begin(),aspt1.end());
            cout<<aspt1[0];
        }
        else{
            sort(aspt2.begin(),aspt2.end());
            cout<<"4"<<aspt2[0]<<"7\n";
        }
        cout<<endl;
    }
    else{
        if(len==9){
            cout<<"4444477777\n";
        }
        else if(len==10){
            cout<<"4444477777\n";
        }
    }
    return 0;
}

