#include<iostream>
#include<iterator>
#include<algorithm>
#include<math.h>
#include<vector>
#include<stack>
#include<string.h>
#include<map>
#include<bitset>
#include<set>
#include<deque>
#include<queue>
#include<list>
#define ln 1000005
#define pi acos(-1.0)
#define pb push_back
#define mp make_pair
using namespace std;

int main()
{
    int num;
    cout<<"Enter the size of an array : ";
    cin>>num;
    
    int arr[num+2][num+2];
    //step 1:
    for(int i=1;i<=num;i++){
        for(int j=1;j<=num;j++){
            arr[i][j]=1;
        }
    }
    //step  2:
    for(int i=1;i<=num;i++){
        for(int j=2;j<=num;j++){
            arr[i][j]+=arr[i][j-1];
        }
    }
    //strp 3:
    for(int i=2;i<=num;i++){
        for(int j=1;j<=num;j++){
            arr[i][j]+=arr[i-1][j];
        }
    }
    //Print 2D array:
    cout<<endl;
    for(int i=1;i<=num;i++){
        for(int j=1;j<=num;j++){
            cout<<arr[i][j]<<" ";
        }
        cout<<endl;
    }
    cout<<endl;
    int x1,y1,x2,y2;
    cout<<"Enter x1,y1,x2,y2 : ";
    cin>>x1>>y1>>x2>>y2;
    
    //Calculation:
    int a =arr[x2][y2];
    int b =arr[x1-1][y2];
    int c=arr[x2][y1-1];
    int d=arr[x1-1][y1-1];
    
    cout<<a<<endl;
    cout<<b<<endl;
    cout<<c<<endl;
    cout<<d<<endl;
    
    int ans=a-(b+c)+d;
    cout<<endl;
    cout<<"Ans  : "<<ans<<endl;
    
    return 0;
}

