#include<iostream>
#include<iterator>
#include<algorithm>
#include<math.h>
#include<vector>
#include<stack>
#include<string.h>
#include<map>
#include<bitset>
#include<set>
#include<deque>
#include<queue>
#include<list>
#define ln 10000005
#define pi acos(-1.0)
#define pb push_back
#define mp nake_pair
using namespace std;
int main()
{
    int test_case;
    cin>>test_case;
    
    while(test_case--){
        int n,k;
        cin>>n>>k;
        
        if(pow(k,2)<=n){
            if(n%2==0 && k%2==1){
                cout<<"NO\n";
            }
            else if(n%2==0 && k%2==0){
                cout<<"YES\n";
            }
            else if(n%2==1 && k%2==1){
                cout<<"YES\n";
            }
            else if(n%2==1 && k%2==0){
                cout<<"NO\n";
            }
        }
        else{
            cout<<"NO\n";
        }
    }
    return 0;
}
